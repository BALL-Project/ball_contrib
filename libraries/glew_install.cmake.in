MESSAGE(STATUS "Installing GLEW on Windows")

IF(@CONTRIB_ADDRESSMODEL@ EQUAL 64)
	SET(ARCH_DIR "x64")
ELSE()
	SET(ARCH_DIR "Win32")
ENDIF()

FILE(INSTALL "@CONTRIB_BINARY_SRC@/@PACKAGE_NAME@/bin/Release/${ARCH_DIR}/glew32.dll" DESTINATION "@CONTRIB_INSTALL_DLL@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL "@CONTRIB_BINARY_SRC@/@PACKAGE_NAME@/lib/Release/${ARCH_DIR}/glew32.lib" DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL "@CONTRIB_BINARY_SRC@/@PACKAGE_NAME@/lib/Release/${ARCH_DIR}/glew32s.lib" DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)

FILE(INSTALL "@PROJECT_BINARY_DIR@/src/glew/include/GL" DESTINATION "@CONTRIB_INSTALL_INC@" USE_SOURCE_PERMISSIONS)
