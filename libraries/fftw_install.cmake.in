MESSAGE(STATUS "Installing fftw3")

FILE(GLOB_RECURSE FFTW3_LIBS "@BUILDDIR@/${config}" "*.lib")
FILE(GLOB_RECURSE FFTW3_DLLS "@BUILDDIR@/${config}" "*.dll")
FILE(GLOB_RECURSE FFTW3_PDBS "@BUILDDIR@/${config}" "*.pdb")

FILE(INSTALL ${FFTW3_LIBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL ${FFTW3_DLLS} DESTINATION "@CONTRIB_INSTALL_BIN@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL ${FFTW3_PDBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)

FILE(INSTALL "@PROJECT_BINARY_DIR@/src/fftw3/api/fftw3.h" DESTINATION "@CONTRIB_INSTALL_INC@")
