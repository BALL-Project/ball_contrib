MESSAGE(STATUS "Installing fftw")

FILE(GLOB_RECURSE FFTW_LIBS "@BUILDDIR@/${config}" "*.lib")
FILE(GLOB_RECURSE FFTW_DLLS "@BUILDDIR@/${config}" "*.dll")
FILE(GLOB_RECURSE FFTW_PDBS "@BUILDDIR@/${config}" "*.pdb")

FILE(INSTALL ${FFTW_LIBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL ${FFTW_DLLS} DESTINATION "@CONTRIB_INSTALL_BIN@" USE_SOURCE_PERMISSIONS)
FILE(INSTALL ${FFTW_PDBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)

FILE(INSTALL "@PROJECT_BINARY_DIR@/src/fftw/api/fftw3.h" DESTINATION "@CONTRIB_INSTALL_INC@")
