MESSAGE(STATUS "Installing @PACKAGE_NAME@")

FILE(GLOB_RECURSE FILES RELATIVE @TARGET_DIR@ "@TARGET_DIR@/*")
FOREACH(file ${FILES})
message(${file})
	GET_FILENAME_COMPONENT(FILE_DIR ${file} DIRECTORY)
	FILE(INSTALL ${file} DESTINATION "@CONTRIB_INSTALL_BASE@/${FILE_DIR}" USE_SOURCE_PERMISSIONS)
ENDFOREACH()
