MESSAGE(STATUS "Installing tbb")
IF(@MSVC@)
	SET(PLATFORM "ia32")
	IF(@BITS@ EQUAL 64)
		SET(PLATFORM "intel64")
	ENDIF()

	FILE(GLOB_RECURSE TBB_LIBS "@BUILDDIR@/@DOLLAR@{PLATFORM}/@DOLLAR@{config}" "*.lib")
	FILE(GLOB_RECURSE TBB_DLLS "@BUILDDIR@/@DOLLAR@{PLATFORM}/@DOLLAR@{config}" "*.dll")
	FILE(GLOB_RECURSE TBB_PDBS "@BUILDDIR@/@DOLLAR@{PLATFORM}/@DOLLAR@{config}" "*.pdb")

	FILE(INSTALL @DOLLAR@{TBB_LIBS} DESTINATION "@CONTRIB_INSTALL_LIB@")
	FILE(INSTALL @DOLLAR@{TBB_DLLS} DESTINATION "@CONTRIB_INSTALL_BIN@")
	FILE(INSTALL @DOLLAR@{TBB_PDBS} DESTINATION "@CONTRIB_INSTALL_LIB@")
ELSE()
	FILE(GLOB_RECURSE TBB_LIBS "@PROJECT_BINARY_DIR@/src/tbb/build" "libtbb*")

	FILE(INSTALL @DOLLAR@{TBB_LIBS} DESTINATION "@CONTRIB_INSTALL_LIB@")
ENDIF()

FILE(INSTALL "@PROJECT_BINARY_DIR@/src/tbb/include/tbb" DESTINATION "@CONTRIB_INSTALL_INC@")
