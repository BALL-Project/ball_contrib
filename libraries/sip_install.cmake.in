MESSAGE(STATUS "Installing SIP")

#copy sipgen\sip.exe ..\bin
FILE(INSTALL "@BUILDDIR@/sipgen/sip.exe" DESTINATION "@CONTRIB_INSTALL_BIN@" USE_SOURCE_PERMISSIONS)

#copy siplib\*.pyd ..\dlls
FILE(GLOB_RECURSE SIP_PYDS "@BUILDDIR@/siplib" "*.pyd")
FILE(INSTALL ${SIP_PYDS} DESTINATION "@CONTRIB_INSTALL_DLL@" USE_SOURCE_PERMISSIONS)

#copy siplib\*.lib ..\lib
FILE(GLOB_RECURSE SIP_LIBS "@BUILDDIR@/siplib" "*.lib")
FILE(INSTALL ${SIP_LIBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)

#copy siplib\*.pdb ..\lib
FILE(GLOB_RECURSE SIP_PDBS "@BUILDDIR@/siplib" "*.pdb")
FILE(INSTALL ${SIP_PDBS} DESTINATION "@CONTRIB_INSTALL_LIB@" USE_SOURCE_PERMISSIONS)

#copy siplib\*.h ..\include
FILE(GLOB_RECURSE SIP_INCS "@BUILDDIR@/siplib" "*.h")
FILE(INSTALL ${SIP_INCS} DESTINATION "@CONTRIB_INSTALL_INC@" USE_SOURCE_PERMISSIONS)
